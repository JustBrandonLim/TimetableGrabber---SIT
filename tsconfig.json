{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "out",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*",
    "src/common/**/*" // Include the common folder and its contents
  ]
}
